<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="warehouse.controllers.MenuController"
            prefHeight="30.0">
    <MenuBar focusTraversable="true" GridPane.rowIndex="0" GridPane.columnIndex="0">
        <menus>
            <Menu text="Add">
                <items>
                    <MenuItem fx:id="addAuthorMenuItem" text="Author" onAction="#addAuthorMenuItemClick"/>
                    <MenuItem fx:id="addBookMenuItem" text="Book" onAction="#addBookMenuItemClick"/>
                    <MenuItem fx:id="addGenreMenuItem" text="Genre" onAction="#addGenreMenuItemClick"/>
                </items>
            </Menu>
            <Menu text="Edit">
                <items>
                    <MenuItem fx:id="editAuthorsMenuItem" text="Authors"/>
                    <MenuItem fx:id="editBooksMenuItem" text="Books"/>
                    <MenuItem fx:id="editGenresMenuItem" text="Genres"/>
                </items>
            </Menu>
            <Menu text="Help">
                <items>
                    <MenuItem fx:id="helpMenuItem" text="Help"/>
                    <MenuItem fx:id="aboutMenuItem" text="About"/>
                </items>
            </Menu>
        </menus>
    </MenuBar>
</AnchorPane>
