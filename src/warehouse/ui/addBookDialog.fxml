        <Label layoutX="36.0" layoutY="102.0" text="Author"/>
        <TextArea fx:id="descTextBox" layoutX="38.0" layoutY="200.0" prefHeight="94.0" prefWidth="325.0"/>
        <Label layoutX="38.0" layoutY="171.0" text="Description"/>
        <Label fx:id="selectedFileLabel" layoutX="143.0" layoutY="316.0" prefHeight="21.0" prefWidth="225.0"/>
        <Button fx:id="selectFileBtn" layoutX="39.0" layoutY="311.0" mnemonicParsing="false"
                onAction="#selectFileBtnClick" prefHeight="31.0" prefWidth="86.0" text="Select file"/>
        <Button fx:id="addBtn" layoutX="227.0" layoutY="346.0" mnemonicParsing="false" onAction="#addBtnClick"
                prefHeight="31.0" prefWidth="64.0" text="Add"/>
    </children>
</AnchorPane>
