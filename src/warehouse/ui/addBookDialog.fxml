<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane fx:id="pane" prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="warehouse.controllers.AddBookDialogController">
    <children>
        <Button fx:id="cancelBtn" layoutX="307.0" layoutY="346.0" mnemonicParsing="false" onAction="#cancelBtnClick"
                text="Cancel"/>
        <TextField fx:id="titleTextBox" layoutX="36.0" layoutY="54.0" prefHeight="31.0" prefWidth="325.0"/>
        <Label layoutX="36.0" layoutY="26.0" text="Title"/>
        <Label layoutX="247.0" layoutY="102.0" text="Type"/>
        <ComboBox fx:id="typesComboBox" layoutX="247.0" layoutY="133.0" prefHeight="31.0" prefWidth="120.0"/>
